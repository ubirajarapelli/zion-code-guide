; Pra todos os arquivos
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true

; Estilo de identação em arquivos Markdown
[*.md]
indent_style = tab
indent_size = 2

; Estilo de identação em arquivos HTML
[*.html]
indent_style = tab
indent_size = 2
 
; Estilo de identação em arquivos CSS
[*.css]
indent_style = tab
indent_size = 2
 
; Estilo de identação em arquivos JS
[*.js]
indent_style = tab
indent_size = 2
